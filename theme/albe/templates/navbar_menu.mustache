{{#haschildren}}
    <z-menu slot="menu">
        <a active="{{#isactive}}active{{/isactive}}" id="drop-down-{{moremenuid}}">{{{text}}}</a>
    </z-menu>
    <z-menu slot="menu" floating>
        <div active="{{#isactive}}active{{/isactive}}">{{{text}}}</div>
        {{#children}}
            {{^divider}}
                {{#is_action_link}}
                    <a slot="item" {{#actionattributes}}{{name}}="{{value}}" {{/actionattributes}} href="{{{url}}}{{{action}}}">
                        {{{text}}}
                    </a>
                    {{#action_link_actions}}
                        {{> core/actions }}
                    {{/action_link_actions}}
                {{/is_action_link}}
                {{^is_action_link}}
                    <a slot="item" href="{{{url}}}{{{action}}}" {{#isactive}}active{{/isactive}}>
                        {{{text}}}
                    </a>
                {{/is_action_link}}
            {{/divider}}
            {{#divider}}
                <div class="dropdown-divider"></div>
            {{/divider}}
        {{/children}}
    </z-menu>
{{/haschildren}}
